<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <com.moje.onlyu.widget.IWTopTitleView
        android:id="@+id/top_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hasLeft="true"
        app:titleview_title_text="确认卡号"/>

    <Button
        android:id="@+id/activity_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Hello World!" />

    <com.moje.onlyu.widget.ToggleButton
        android:layout_width="54dp"
        android:layout_height="30dp"
        toggle:borderWidth="2dp"
        toggle:offBorderColor="#000"
        toggle:offColor="#ddd"
        toggle:onColor="#f00"
        toggle:spotColor="#00f"></com.moje.onlyu.widget.ToggleButton>

    <com.moje.onlyu.widget.SwitchView
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"></com.moje.onlyu.widget.SwitchView>

    <com.moje.onlyu.widget.SunBabyLoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="5dp"
        android:text="12344"
        android:textSize="20sp" />
</RelativeLayout>
